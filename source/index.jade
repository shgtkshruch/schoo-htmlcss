doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title= index.title
    link(rel="stylesheet" href="/css/html5reset-1.6.1.css")
    link(rel="stylesheet" href="/css/style.css")
  body
    #container
      header
        .top.cf
          .logo
            img(src="/img/logomark_s.png")
          nav
            ul.cf
              each val in index.nav
                li
                  a(href="#")= val
        h1= index.h
        p= index.lorem_s
        img(src="/img/bill1.jpg")

      #main
        aside.cf
          .asideLogo
            img(src="/img/logomark_l.png")
          - for (var i = 0; i < 3; i++)
            .publicity
              img(src="/img/aside#{i+1}.jpg")
              h3= index.h
              p= index.lorem_m
        article
          h3= index.h
          each val in index.nav
            if val != 'Access'
              section.cf
                .sectionHead
                  h2= val
                  p= index.lorem_s
                case val
                  when 'Topics'
                    .iframeWrap
                      iframe(width="790" height="444" src="#{index.youtube}" frameborder="0" allowfullscreen)
                  when 'Tops'
                  when 'Bottoms'
                    - for (var i = 0; i < 6; i++)
                      if i == 2 || i == 5
                        .item.mr0
                          img(src="/img/#{val}#{i+1}.jpg")
                          p= index.lorem_ss
                      else
                        .item
                          img(src="/img/#{val}#{i+1}.jpg")
                          p= index.lorem_ss

      footer
        .sectionHead
          h2 Access
          p= index.lorem_s
        .iframeWrap
          iframe(src="#{index.map}" width="1020" height="600" frameborder="0" style="border:0")
        .footerBottom
          img(src="/img/logomark_s.png")
          small= index.lorem_m

