doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title= index.title
  body
    #container
      header
        .top
          .logo
            img(src="/img/logomark_s.png")
          nav
            ul
              each val in index.nav
                li
                  a(href="#")= val
        h1= index.h
        p= index.lorem_s
        img(src="/img/bill1.jpg")

      #main
        aside
          .asideLogo
            img(src="/img/logomark_l.png")
          - for (var i = 0; i < 3; i++)
            .publicity
              img(src="/img/aside#{i+1}.jpg")
              h3= index.h
              p= index.lorem
        article
          each val in index.nav
            if val != 'Access'
              section
                .sectionHead
                  h2= val
                  p= index.lorem_s
                case val
                  when 'Topics'
                    .iframeWrap
                      iframe(width="790" height="444" src="#{index.youtube}" frameborder="0" allowfullscreen)
                  when 'Tops'
                  when 'Bottoms'
                    - for (var i = 0; i < 6; i++)
                      .item
                        img(src="/img/#{val}#{i+1}.jpg")
                        p= index.lorem_s

      footer
        .footerHead
          h2 Access
          p= index.lorem_s
        .iframeWrap
          iframe(src="#{index.map}" width="1020" height="600" frameborder="0" style="border:0")
        .footerBottom
          img(src="/img/logomark_s.png")
          small= index.lorem_s

